							a class="dropdown-toggle" href="#" Users
							ul class="dropdown-menu"
								li
									#{link_to "List", users_path}
								li 
									#{link_to "New user", new_user_registration_path}
								li class="divider"
								li
									a href="#" Box.net


		div class="container"

			div class="content"

				=render :partial => "shared/alerts.slim"
				div class="row"
					div class="span10"
						=yield
					div class="span4"

			footer
